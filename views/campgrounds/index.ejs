<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Yelp Camp</h1>
        <p class="lead">You can view all the campgrounds here!</p>
    </div>
    <div class="row mt-5">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 d-flex justify-content-around">
                <div class="card" style="width: 30rem;">
                    <img src="<%= campground.image %>" class="card-img-top" >
                    <div class="card-body">
                    <h4 class="card-title"><%= campground.title %></h4>
                    <p class="card-text"><%= campground.description %></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View details</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>